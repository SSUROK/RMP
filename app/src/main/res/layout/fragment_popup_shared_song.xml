<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|top"
        android:layout_marginStart="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/shared_song_message" />

    <TextView
        android:id="@+id/songNameInPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bandNameInPopup"
        android:layout_alignStart="@+id/bandNameInPopup"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/bandNameInPopup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/albumImageInPopup"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/albumImageInPopup"
        android:text="TextView" />

    <ImageView
        android:id="@+id/albumImageInPopup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/message"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/deathconsciousness" />

    <Button
        android:id="@+id/showBtInPopup"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_below="@+id/albumImageInPopup"
        android:layout_marginTop="30dp"
        android:text="Show" />

    <Button
        android:id="@+id/playBtInPopup"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/albumImageInPopup"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/showBtInPopup"
        android:text="Play" />
</RelativeLayout>